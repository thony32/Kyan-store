{
    "name": "codeipsum-workspace",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite --host",
        "build": "vite build",
        "lint": "biome lint --write ./src",
        "format": "biome format --write ./src",
        "typecheck": "tsc",
        "preview": "vite preview",
        "build:vercel": "vite build && cp vercel.json dist/vercel.json",
        "deploy": "vite build && cp vercel.json dist/vercel.json && vercel --prod",
        "prepare": "husky"
    },
    "dependencies": {
        "@radix-ui/react-icons": "^1.3.0",
        "@radix-ui/react-slot": "^1.1.0",
        "@tanstack/react-query": "^5.53.3",
        "@tanstack/react-router": "^1.52.5",
        "@tsparticles/confetti": "^3.5.0",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "framer-motion": "^11.4.0",
        "howler": "^2.2.4",
        "i18next": "^23.14.0",
        "i18next-browser-languagedetector": "^8.0.0",
        "i18next-http-backend": "^2.6.1",
        "lenis": "^1.1.13",
        "lucide-react": "^0.438.0",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "react-error-boundary": "^4.0.13",
        "react-helmet-async": "^2.0.5",
        "react-i18next": "^15.0.1",
        "react-responsive": "^10.0.0",
        "tailwind-merge": "^2.5.2",
        "tailwindcss-animate": "^1.0.7",
        "zod": "^3.23.8",
        "zustand": "^4.5.5"
    },
    "devDependencies": {
        "@biomejs/biome": "1.8.3",
        "@tanstack/router-devtools": "^1.52.5",
        "@tanstack/router-vite-plugin": "^1.52.0",
        "@types/howler": "^2.2.11",
        "@types/node": "^22.5.2",
        "@types/react": "^18.3.5",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react-swc": "^3.7.0",
        "autoprefixer": "^10.4.20",
        "husky": "^9.1.5",
        "lint-staged": "^15.2.10",
        "postcss": "^8.4.44",
        "tailwindcss": "^3.4.10",
        "typescript": "^5.5.4",
        "vite": "^5.4.3"
    },
    "lint-staged": {
        "./src/**/*.{js,ts,jsx,tsx}": "biome format --write ./src",
        "./src/**/*.{ts,tsx}": "biome lint --write --unsafe ./src"
    }
}
